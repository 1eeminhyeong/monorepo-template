{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "paths": {
      "~/*": ["./src/*"]
    },
    "composite": true,
    "plugins": [
      {
        "name": "typescript-styled-plugin",
        "tags": ["styled", "css"]
      }
    ]
  },
  "include": ["../common-styles/src/emotion.d.ts", "src/**/*", "@types/*"]
}
